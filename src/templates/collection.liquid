<div id="collection-page">
	<select class="input--dropdown">
		<option disabled="disabled" selected="selected" value="">Sort</option>
		<option>Newest Arrival</option>
		<option>A - Z</option>
		<option>Z - A</option>
		<option>Price Low to High</option>
		<option>Price High to Low</option>
	</select>
	<div class="collection-list">
		{% for product in collection.products %}
		<div class="product-card">
			{% assign firstAvailable = product.first_available_variant %}
			<img
				{%
				if
				firstAvailable.image.src
				%}
				src="{{ firstAvailable.image.src | img_url: 'large' }}"
				{%
				endif
				%}
				class="product-image"
				alt="Product Picture"
			/>
			<div class="product-info">
				<p class="product-text">{{ product.title }}</p>
				<p class="product-text">
					{{ product.price_min | | money_without_currency }}
				</p>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
